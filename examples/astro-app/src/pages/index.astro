---
import "../globals.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <script type="module">
      import "../../node_modules/@core/lib/dist/lib.js";
    </script>
    <title>Astro</title>
  </head>
  <body>
    <div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
      <form class="w-full max-w-sm bg-white shadow-lg rounded-xl px-8 pt-8 pb-6">
      <h2 class="text-2xl font-semibold text-center text-gray-800 mb-6">
        Welcome Back
      </h2>

      <div class="mb-5">
        <label
          class="block text-gray-700 text-sm font-medium mb-1"
          for="username"
        >
          Username
        </label>
        <wc-text-input
          class="w-full rounded-md text-gray-800"
          id="username"
          type="text"
          placeholder="Enter your username"
        ></wc-text-input>
      </div>

      <div class="mb-5">
        <label
          class="block text-gray-700 text-sm font-medium mb-1"
          for="password"
        >
          Password
        </label>
        <wc-text-input
          class="w-full rounded-md text-gray-800"
          id="password"
          type="password"
          placeholder="********"
        ></wc-text-input>
        <p class="text-red-500 text-xs italic mt-1">
          Please enter a valid password.
        </p>
      </div>

      <div class="flex items-center justify-between">
        <wc-button
          label="Sign In"
          class="bg-[#4299e1] hover:bg-[#2b6cb0] text-white font-semibold py-1 px-1.5 rounded-md transition-colors duration-200"
        ></wc-button>
        <a class="text-sm text-[#4299e1] hover:underline font-medium" href="#">
          Forgot password?
        </a>
      </div>
    </form>
    </div>
  </body>
</html>
